package menus;

import java.util.List;

import javax.swing.JOptionPane;

import model.Produto;
import model.Usuario;
import service.ProdutoService;
import service.UsuarioService;

public class MenuCrudProdutos {

	static int opcao = 0;
	
	public static void menu(List<Produto> produtos) {

		do {
			ProdutoService produtoService = new ProdutoService();
			opcao = Integer
					.parseInt(JOptionPane.showInputDialog("*GERENCIAMENTO DE PRODUTOS* \n" 
							+ "1 - Cadastrar \n" 
							+ "2 - Listar \n"
							+ "3 - Alterar \n" 
							+ "4 - Remover \n" 
							+ "5 - Voltar \n\n"));

			switch (opcao) {				
			case 1:				
				produtoService.cadastrar(produtos);
				break;
			case 2:				
				produtoService.listar(produtos);
				break;
			case 3:
				produtoService.alterar(produtos);
				break;
			case 4:
				produtoService.remover(produtos);
				break;
			case 5:
				break;
			default:
				JOptionPane.showMessageDialog(null, "Opção inválida");
				break;
			}
		} while (opcao != 5);
	}
	
}
