package menus;

import java.util.ArrayList;
import java.util.List;

import javax.swing.JOptionPane;

import model.Usuario;

public class MenuAdmin {
	static int opcao = 0;

	public static void menu(List<Usuario> usuarios) {

		do {
			opcao = Integer
					.parseInt(JOptionPane.showInputDialog("*MENU ADMIN* \n" 
							+ "1 - Gerenciar Usuarios \n" 
							+ "2 - Gerenciar Marcas \n"
							+ "3 - Gerenciar Produtos \n" 
							+ "4 - Realizar Venda \n" 
							+ "5 - Logout \n\n"));

			switch (opcao) {

			case 1:
				MenuCrudUsuarios.menu(usuarios);
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			default:
				break;
			}
		} while (opcao != 5);
	}

}
