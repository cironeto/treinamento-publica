package menus;

import java.util.ArrayList;
import java.util.List;

import javax.swing.JOptionPane;

import model.Produto;
import model.Usuario;

public class MenuAdmin {
	static int opcao = 0;

	public static void menu(List<Usuario> usuarios, List<Produto> produtos) {

		do {
			opcao = Integer
					.parseInt(JOptionPane.showInputDialog("*MENU ADMIN* \n" 
							+ "1 - Gerenciar USUARIOS \n" 
							+ "2 - Gerenciar MARCAS \n"
							+ "3 - Gerenciar PRODUTOS \n" 
							+ "4 - Realizar VENDA \n" 
							+ "5 - Logout \n\n"));

			switch (opcao) {

			case 1:
				MenuCrudUsuarios.menu(usuarios);
				break;
			case 2:
				break;
			case 3:
				MenuCrudProdutos.menu(produtos);
				break;
			case 4:
				break;
			case 5:
				break;
			default:
				JOptionPane.showMessageDialog(null, "Opção inválida");
				break;
			}
		} while (opcao != 5);
	}

}
